<section class="user">
  <%= profile_image(@user) %>
  <h1><%= @user.name %></h1>
  <% if @user.username %>
    <strong> <%= @user.username %> </strong>
  <% end %>
  <h2><%= mail_to(@user.email) %></h2>
  <h3>Member Since</h3>
  <p>
    <%= @user.created_at.strftime("%B %Y") %>
  </p>

    <div class="actions">
      <% if current_user  %>
        <%= link_to "Edit Profile", edit_user_path(@user), class: "button edit"%>
      <% end %>
      <% if current_user_admin? %>
        <%= link_to "Delete Profile", user_path(@user), class: "button delete", data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure you want to delete your account?"
          }
        %>
      <% end %>
  </div>


  <% if @reviews.present? %>
    <h3>Reviews</h3>
    <% @reviews.each do |review| %>
      <div class="review">
        <div class="details">
          <span class="title">
            <%= link_to review.movie.title, review.movie %>
          </span>
          <%= pluralize(review.stars, 'star') %>
          <span class="date">
            <%= time_ago_in_words(review.created_at) %> ago
          </span>
          <p>
            <%= review.comment %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</section>
</section>
